# =============================================================================
# Water Reminder Bot - Пример файла конфигурации
# =============================================================================
# 
# ИНСТРУКЦИЯ:
# 1. Скопируйте этот файл как .env
# 2. Заполните значения своими данными
# 3. НЕ загружайте .env в Git (он уже в .gitignore)
# 
# =============================================================================

# =============================================================================
# ОБЯЗАТЕЛЬНЫЕ ПАРАМЕТРЫ
# =============================================================================

# Токен вашего Telegram бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# =============================================================================
# ОПЦИОНАЛЬНЫЕ ПАРАМЕТРЫ
# =============================================================================

# Часовой пояс по умолчанию (по умолчанию: Etc/GMT-3)
# Примеры: Europe/Moscow, Asia/Yekaterinburg, Europe/Kiev
DEFAULT_TIMEZONE=Etc/GMT-3

# Имя базы данных (по умолчанию: reminders.db)
DB_NAME=reminders.db

# Имя базы данных планировщика (по умолчанию: scheduler_jobs.db)
SCHEDULER_DB_NAME=scheduler_jobs.db

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Файл для записи логов
LOG_FILE=bot_log.txt

# =============================================================================
# ЛИМИТЫ И НАСТРОЙКИ
# =============================================================================

# Максимальное количество кастомных напоминаний на пользователя
MAX_CUSTOM_REMINDERS=10

# Максимальная длина сообщения напоминания
MAX_MESSAGE_LENGTH=500

# Время отсрочки для пропущенных напоминаний (в секундах)
# 3600 = 1 час
MISFIRE_GRACE_TIME=3600

# Интервал очистки старых напоминаний (в часах)
CLEANUP_INTERVAL_HOURS=1

# =============================================================================
# РЕЖИМ РАЗРАБОТКИ
# =============================================================================

# Включить режим отладки (true/false)
DEBUG_MODE=false

